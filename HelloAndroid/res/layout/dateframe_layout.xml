<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fromDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/fromDatePicker"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="From"
        android:textSize="20dp"
        android:textStyle="bold" />
    
    <Button
        android:id="@id/fromDatePicker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fromDateTextView"
        android:layout_centerHorizontal="true"/>
    
     <TextView
        android:id="@+id/toDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/fromDatePicker"
        android:layout_below="@id/fromDatePicker"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="To"
        android:textSize="20dp"
        android:textStyle="bold" />
     
     <Button
         android:id="@+id/toDatePicker"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/toDateTextView"
         android:layout_centerHorizontal="true"/>
     
     <LinearLayout
        android:id="@+id/dateFrameButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toDatePicker"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="10dp" >

         <Button
             android:id="@+id/confirmDateFrameButton"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_margin="2dp"
             android:layout_weight="1"
             android:padding="5dp"
             android:text="@string/ok" />

        <Button
            android:id="@+id/cancelDateFrameButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/cancel" />
    </LinearLayout>

</RelativeLayout>