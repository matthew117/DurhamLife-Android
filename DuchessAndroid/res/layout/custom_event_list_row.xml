<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listRowLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="@drawable/list_row_background">

    <RelativeLayout
        android:id="@+id/rowHeaderLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp" >

        <TextView
            android:id="@+id/txtEventName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:layout_toLeftOf="@+id/pinButton"
            android:ellipsize="end"
            android:hint="Event Name"
            android:maxLines="1"
            android:textColor="@color/list_title_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtEventName"
            android:layout_toLeftOf="@+id/pinButton"
            android:hint="Location + Duration"
            android:lineSpacingMultiplier="1.1"
            android:textColor="@color/list_subtitle_color"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:src="@drawable/clear_bookmark" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp" >

        <ImageView
            android:id="@+id/categoryIcon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:src="@drawable/full_star" />

        <ImageView
            android:id="@+id/categoryIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:src="@drawable/full_star" />

        <ImageView
            android:id="@+id/categoryIcon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:src="@drawable/full_star" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtEventDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:ellipsize="end"
        android:hint="Event Description Header"
        android:maxLines="3"
        android:textColor="@color/list_description_color"
        android:textSize="12sp"
        android:textStyle="italic"
        android:typeface="serif" />

    <LinearLayout
        android:id="@+id/reviewStarsEventListHolder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp" >

        <ImageView
            android:id="@+id/newStar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/rating"
            android:src="@drawable/full_star" />

        <ImageView
            android:id="@+id/newStar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/rating"
            android:src="@drawable/full_star" />

        <ImageView
            android:id="@+id/newStar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/rating"
            android:src="@drawable/full_star" />

        <ImageView
            android:id="@+id/newStar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/rating"
            android:src="@drawable/full_star" />

        <ImageView
            android:id="@+id/newStar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/rating"
            android:src="@drawable/full_star" />

        <TextView
            android:id="@+id/numberOfReviewsOnList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="7dp"
            android:textColor="#ffa322"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>