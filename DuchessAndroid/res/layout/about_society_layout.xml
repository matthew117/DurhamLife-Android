<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/societyDetailsScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/socialNetworkingLayout"
        android:layout_alignParentTop="true" >


        <LinearLayout
            android:id="@+id/societyDetailsContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textViewSocietyDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.1"
                android:padding="5dp"
                android:text="@string/default_description"
                android:typeface="normal" />

            <Button
                android:id="@+id/emailContactButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/email_small"/>

            <Button
                android:id="@+id/websiteButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/internet_small"/>

        </LinearLayout>

    </ScrollView>