<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomRatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/full_star</item>
        <item name="android:indeterminateDrawable">@drawable/full_star</item>
        <item name="android:minHeight">57dip</item>
        <item name="android:maxHeight">57dip</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="CustomRatingBar.Indicator">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/empty_star</item>
        <item name="android:indeterminateDrawable">@drawable/empty_star</item>
        <item name="android:minHeight">38dip</item>
        <item name="android:maxHeight">38dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

</resources>